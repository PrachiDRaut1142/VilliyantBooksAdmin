@model UserVM;
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- BEGIN: Subheader -->
<div class="m-subheader ">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="m-subheader__title m-subheader__title--separator">User Management</h3>
            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
            </ul>
        </div>
        <div>
            <button type="button" class="btn btn-dark" onclick="window.location.href='/User/Create/'"><i class="la la-plus"></i> Create New</button>
        </div>
    </div>
</div>
<!-- END: Subheader -->

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <span class="m-portlet__head-icon m--hide">
                        <i class="la la-gear"></i>
                    </span>
                    <h3 class="m-portlet__head-text">
                        List of users
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table id="Usertbl" class="table table-striped-even ab-table-head-bg-warning-light table-borderless table-middle m-data-table">
                            <thead>
                                <tr>
                                    <th>User Name / ID</th>
                                    <th>Email ID</th>
                                    <th>Contact Number</th>
                                    <th>Role</th>
                                    <th>Created On / By</th>
                                    <th>Status</th>
                                    <th>Last Login</th>
                                    <th>Edit</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Employeelist != null)
                                {
                                    int i = 0;
                                    foreach (var userlist in Model.Employeelist)
                                    {
                                <tr>
                                    <td>
                                       @userlist.FullName<span class="display-block font-small-2">@userlist.EmpId</span>
                                    </td>
                                    <td>
                                        @userlist.EmailId
                                    </td>
                                    <td>
                                        @userlist.ContactNo
                                    </td>
                                    <td>@userlist.UserRole</td>
                                    <td>
                                        @userlist.CreatedOn.ToString("dd-MM-yyyy HH:mm")
                                        <span class="display-block font-small-2">@userlist.usercreatedname</span>
                                    </td>
                                    <td>
                                        @if (userlist.Status == "Active")
                                        {
                                            <span class="m-badge m-badge--success m-badge--rounded m-badge--wide">@userlist.Status</span>

                                        }
                                        @if (userlist.Status == "Inactive")
                                        {
                                            <span class="m-badge m-badge--danger m-badge--rounded m-badge--wide">@userlist.Status</span>

                                        }
                                        @if (userlist.Status == "InComplete Registration")
                                        {
                                            <span class="m-badge m-badge--warning m-badge--rounded m-badge--wide">@userlist.Status</span>

                                        }
                                    </td>
                                    <td>@userlist.LastLogin</td>
                                    <td><a  href="/User/Detail/@userlist.DecodeId" class="text-dark"> <i class="flaticon-edit"></i> </a></td>
                                    <td><a href="#" class="text-danger deleteId" data-id="@userlist.id"> <i class="flaticon-delete deleteId"> </i></a></td>
                                </tr>
                                        i++;
                                    }
                                    if (i == 0)
                                    {
                                        <tr>
                                            <td colspan="7" class="text-center"> No Data </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="viewMessage1" value="@Model.ViewMessage" />
<input type="hidden" id="errorMessage1" value="@Model.ErrorMessage" />

@section scripts {
    <script src="~/assets/scripts/user/manage.js"></script>
}