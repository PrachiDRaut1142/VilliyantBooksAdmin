@using Freshlo.Web.Models.Account;
@model ForgetPasswordViewMoel;
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
@{
    <style>
        .m-login.m-login--2 .m-login__wrapper .m-login__container .m-login__form .m-form__group .form-control {
            border-radius: 4px;
            border: 1px solid;
            padding: 1.5rem 1.5rem;
            margin-top: 1.5rem;
        }
    </style>
}



<link href="~/assets/css/pages/account/account.css" rel="stylesheet" />
<div class="account-flex">
    <div class="account-flex-column">
        <div class="account-form">
            <form class="m-login__form m-form form" asp-controller="Account" asp-action="ForgotPassword" id="ResetUpForm" method="post">
                <div class="form-header">
                    <div class="logo">
                        <img src="@Model.businessInfo.logo_url" alt="Logo" style="width:120px;">

                    </div>
                    <h3 class="pt-3 font-medium-3 text-left">Forgot your password? Let's get you a new one.</h3>
                </div>
                <div class="form-group m-form__group">
                    <div class="m-input-icon m-input-icon--right">
                        <input type="text" class="form-control m-input border-radius-3" id="UserId" name="UserId" placeholder="Email Id">
                        <span class="m-input-icon__icon m-input-icon__icon--right animated bounceIn password">
                            <span>
                                <i class="la la-envelope-o" id="UserIDErr"></i>
                            </span>
                        </span>
                    </div>
                </div>
                <div class="form-group m-form__group mt-2 d-none">
                    <div id="NewPasswordErr" class="text-danger text-bold-700"></div>
                </div>
                <div class="m-login__form-action mt-2">
                    <button type="button" class="btn btn-dark btn-block" id="ResetPassword">Request Password Reset</button>
                </div>
                <div class="form-group mt-2">
                    <p class="font-small-3">Note : Please enter your valid email address. We'll send you a reset link to change your password.</p>
                </div>
                <div class="mt-5">
                    <input type="hidden" id="errorMessage" value="@Model.ErrorMessage" />
                </div>
            </form>
        </div>
    </div>
    <div class="account-flex-column second">
        <div class="row">
            <a href="https://www.clouddukaan.com" target="_blank" class="top">
                <img class="top-logo" src="/assets/img/update/freshpos-white-logo.png" width="120px">
            </a>
            <div class="left-panel-content mt-4">

                <p class="font-medium-3 text-white">Welcome to FreshPOS</p>
                <div class="col-lg-10 col-md-12 col-sm-12">
                    <p class="font-large-2 text-white " style="line-height: 45px">Modern and robust solution for smart &amp; growing restaurants. </p>
                    <p class="font-medium-2 text-white" style="">Tansforming restaurants and retail businesses to go digital with the next-generation order management system.</p>
                </div>

            </div>

            <div class="left-bottom ml-5 pb-4">
                <a href="https://automatebuddy.com" target="_blank">
                    <span class="text-white">Product of</span>
                    <img src="/assets/img/automatebuddy-logo-white.png" alt="Product of AutomateBuddy">
                </a>
            </div>


        </div>
    </div>
</div>

@section Scripts{
    <script src="~/assets/scripts/Account/ForgetPassword.js"></script>
}