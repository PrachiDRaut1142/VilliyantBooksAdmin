@using Freshlo.Web.Models.Account;
@model ResetPasswordViewModel;
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
@{
    <style>
        .m-login.m-login--2 .m-login__wrapper .m-login__container .m-login__form .m-form__group .form-control {
            border-radius: 4px;
            border: 1px solid;
            padding: 1.5rem 1.5rem;
            margin-top: 1.5rem;
        }
    </style>
}

<div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-2" style="background-image: url(/assets/app/media/img//bg/bg-10.png)";>
    <div class="m-grid__item m-grid__item--fluid m-login__wrapper">
        <div class="m-login__container" style="background-color: white;padding:20px;border-radius: 5px;">
            <div class="m-login__logo">
                <a href="#">
                    <img src="@Model.businessInfo.logo_url" alt="Dastar Logo" style="width:120px;" />
                </a>
            </div>
            <div class="m-login__signin">
                <div class="m-login__head">
                    <h4 class="m-login__title">Reset your password? Let's get you a new one.</h4>
                </div>
                <form class="m-login__form m-form" id="ResetUpForm" asp-controller="Account" asp-action="ResetPassword" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control m-input" id="" name="" asp-for="@Model.EmailAddress" placeholder="Email Id" readonly="">
                        <input type="text" class="form-control m-input" id="UserId" name="UserId" asp-for="@Model.UserId" placeholder="" readonly="" hidden>
                        <input type="hidden" id="otp" name="Otp" asp-for="@Model.Otp" readonly="" />
                    </div>
                    <input type="hidden" id="setting" data-length="@Model.SecurityConfig.Password_Length"
                           data-spl-char="@Model.SecurityConfig.Allow_Special_Character"
                           data-numeric="@Model.SecurityConfig.Alpha_Numeric" data-case="@Model.SecurityConfig.Check_Capital" />
                    <div class="form-group m-form__group">
                        <div class="m-input-icon m-input-icon--right">
                            <input type="password" class="form-control m-input" name="NewPassword" id="NewPassword" placeholder="New Password">
                            <span class="m-input-icon__icon m-input-icon__icon--right animated bounceIn NewPassword">
                                <span>
                                    <i class="la la-lock" id="nPasswordErr"></i>
                                </span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group m-form__group">
                        <div class="m-input-icon m-input-icon--right">
                            <input type="password" class="form-control m-input" id="ConfirmPassword" placeholder="Enter Confirm Password">
                            <span class="m-input-icon__icon m-input-icon__icon--right animated bounceIn ConfirmPassword">
                                <span>
                                    <i class="la la-lock" id="cPasswordErr"></i>
                                </span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        @if (string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div id="NewPasswordErr"></div>
                        }
                        else
                        {
                            <div class="text-danger text-bold-700" id="NewPasswordErr">@Model.ErrorMessage</div>
                        }
                    </div>
                    <div class="m-login__form-action mt-4">
                        <button type="button" id="ResetPassId" class="btn btn-brand btn-block">Reset Password</button>
                    </div>
                    <div class="form-group mt-4">
                        <p class="font-small-3">Note : Please enter your valid email address. We'll send you a reset link to change your password.</p>
                    </div>
                    <div class="mt-5">
                        <input type="hidden" id="errorMessage" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/assets/scripts/Account/Resetpassword.js"></script>
}