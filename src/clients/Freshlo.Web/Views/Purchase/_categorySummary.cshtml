@using Freshlo.DomainEntities.DTO
@model List<Pur_ItemSummary>
@{
    //var list = Model.Where(x => x.POQuantity != 0);
}
<table id="categorySummarytbl" class="table table-striped-even ab-table-head-bg-warning-light table-borderless table-middle m-data-table">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Item Count</th>
            <th>Value</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var list in Model)
        {
            <tr>
                <td>
                    <a href="#">
                        <h6 class="mb-1 font-medium-1 text-bold-600 m--font-info">
                            @list.CategoryName
                        </h6>
                        @*<span></span>*@
                    </a>

                </td>
                <td>
                    <span class="m-badge m-badge--warning m-badge--rounded m-badge--wide font-medium-1" data-container="body" data-toggle="m-popover" data-placement="top" data-content="@list.ItemNames" data-original-title="" title="">@list.Stock</span>
                </td>

                <td>
                    Rs. <span class="text-bold-600 text-danger">@list.ItemPrice</span>
                </td>
                <td>
                    <a href="javascript:;" class="m-menu__link m-menu__toggle">
                        <i class="m-menu__ver-arrow la la-angle-right"></i>
                    </a>
                </td>
                
            </tr>
        }

    </tbody>
</table>
<script src="~/assets/demo/demo6/base/scripts.bundle.js" type="text/javascript"></script>

<script>
    $('#categorySummarytbl').DataTable({
        "pageLength": 1000,
        "ordering": false,
        "sorting": true,
        "paging" : false,
    });
</script>
