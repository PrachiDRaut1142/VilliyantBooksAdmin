@using Freshlo.DomainEntities.DTO
@model List<Pur_ItemSummary>
@{
    var sum = Model.Sum(x => x.ItemPrice);
}
<div class="col text-right"><span class="font-medium-1 font-weight-bold pr-4">Total Stock Value: </span><span class="font-medium-5 font-weight-bold m--font-danger">Rs. @sum</span></div>
<table id="summarytbl" class="table table-striped-even ab-table-head-bg-warning-light table-borderless table-middle m-data-table">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Total Purchase Quantity</th>
            <th>Total Purchase Value</th>
            <th>Total Sale</th>
            <th>Total Sale Value</th>
            <th>Wastage</th>
           
            <th>Stock Quantity</th>
            <th>Stock Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var list in Model)
        {
        <tr>
            <td>
                <a href="/ItemMaster/Detail/@list.Id">
                    <h6 class="mb-1 font-medium-1 text-bold-600 m--font-info">
                        @list.Pluname
                    </h6>
                    @*<span></span>*@
                </a>
                <span class="d-block font-small-2">@list.Type</span>
            </td>
            <td>
                @list.POQuantity @list.Measurement
            </td>
            <td>
                Rs. <span class="text-bold-600 text-primary">@list.POPrice</span>
            </td>
            <td>
                @list.SalesQuantity @list.Measurement
            </td>
            <td>
                Rs. <span class="text-bold-600 text-success">@list.SalesPrice</span>
            </td>
            <td>
                @list.Wastage_Quan @list.Measurement
            </td>
          
            <td>
                @list.Stock
                <span class="d-block font-small-2">@list.Weight @list.Measurement</span>
            </td>
            <td>
                Rs. <span class="text-bold-600 text-danger">@list.ItemPrice</span>
            </td>
        </tr>
        }

    </tbody>
</table>


<script>
    $('#summarytbl').DataTable({
        "pageLength": 1000,
        "ordering": false,
        "sorting": true,
        "paging": false,
    });
</script>