@using Freshlo.Web.Models.PurchaseVM;
@using Freshlo.Web.Helpers;
@model DetailVM;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FinancialPDf</title>
    <link href="https://fonts.googleapis.com/css?family=Lato:400,400i,700" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    @*<link href="~/Content/app-assets/css/bootstrap.min.css" rel="stylesheet" />*@
    <link href="~/Content/app-assets/css/invoice-css.css" rel="stylesheet" />
    <style>
        .toptable > tbody > tr > th {
            border-top: none;
        }

        .toptable > tbody > tr > td {
            border-top: none;
        }
    </style>

</head>
<body>
    <div class="container">
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="text-center">
                    <h2>Purchase List</h2>
                </div>
            </div>
        </div>

        @*<div class="row" >
            <div class="col-md-12 d-flex" style="display:flex !important">
                <div class="text-left">
                    <h5>Today</h5>
                    <h4 class="text-danger">Rs. 00.00 (OUT)</h4>
                    <h4 class="text-success">Rs. 00.00 (IN)</h4>
                </div>
                <div class="text-left">
                    <h5>This Week</h5>
                    <h4 class="text-danger">Rs. 00.00 (OUT)</h4>
                    <h4 class="text-success">Rs. 00.00 (IN)</h4>
                </div>
                <div class="text-left">
                    <h5>This Month</h5>
                    <h4 class="text-danger">Rs. 1230.00 (OUT)</h4>
                    <h4 class="text-success">Rs. 8980.00 (IN)</h4>
                </div>
            </div>
        </div>*@
        <hr />
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>Transportation Charge</th>
                        <th>Agent Commission</th>
                        <th>Other Charges</th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>
                            <span class="text-success" style="font-size:18px;">
                                Rs. @Model.Detail.Transportation_Charge
                            </span>
                        </td>
                        <td>
                            <span class="text-success" style="font-size:18px;">
                                Rs. @Model.Detail.AgentCommision
                            </span>
                        </td>
                        <td>
                            <span class="text-success" style="font-size:18px;">
                                Rs. @Model.Detail.OtherExpension
                            </span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>





        <div class="row">
            <div class="col-md-12">
                <p style="margin-top: 50px; font-size:20px;">Product List</p>
                <table class="table table-striped" id="financial_tblId">
                    <thead>
                        <tr>
                            <th>Item Name</th>
                            <th>Total Quantity</th>
                            <th>Measurement</th>
                            <th>Total Cost</th>
                            <th>Item Price</th>
                            <th>Selling Price</th>
                            <th>Market Price</th>
                        </tr>
                    </thead>
                    <tbody id="">
                        @foreach (var list in Model.List)
                        {

                            <tr id="@list.ItemId">
                                <td>
                                    <a href="#" class="text-link">@list.ProductName</a>
                                </td>
                                <td>
                                    @list.Procured_Quantity
                                </td>
                                <td>@list.Measurement</td>
                                <td>
                                    @list.Procured_POPrice
                                </td>
                                <td>
                                    @list.Purchase_Price
                                </td>
                                <td>
                                    @list.Selling_Price
                                </td>
                                <td>
                                    @list.Market_Price
                                </td>

                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>

        <hr />
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th> Sub Total</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>
                            <span class="text-success" style="font-size:18px;">
                                Rs. @Model.Detail.Total_Price
                            </span>
                        </td>
                        <td>
                            <span class="text-success" style="font-size:18px;">
                                Rs. @(Model.Detail.Total_Price + Convert.ToDouble(Model.Detail.Transportation_Charge) + Convert.ToDouble(Model.Detail.OtherExpension) + Convert.ToDouble(Model.Detail.AgentCommision))
                            </span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
  
</body>
</html>

