@using Freshlo.Web.Models.BannerVM;
@model BannerVM
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var aliyunpath = Model.businessInfo.aliyunPath;
}
<link href="~/assets/css/pages/banner/manage.css" rel="stylesheet" />
<style>
</style>
<!-- BEGIN: Subheader -->

<div class="m-subheader ">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="m-subheader__title m-subheader__title--separator">Banner Management</h3>
            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
            </ul>
        </div>
        <div>
            <button type="button" class="btn btn-dark" onclick="window.location.href='/Banner/Create/'"><i class="la la-plus"></i> Create New</button>
        </div>
    </div>
</div>
<!-- END: Subheader -->

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <span class="m-portlet__head-icon m--hide">
                        <i class="la la-gear"></i>
                    </span>
                    <h3 class="m-portlet__head-text">
                        List of Banner
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-striped-even ab-table-head-bg-warning-light table-borderless table-middle bannermanage">
                            <thead>
                                <tr>
                                    <th>Banner Name</th>
                                    <th>Place</th>
                                    <th>Size</th>
                                    <th>Triggered On</th>
                                    <th>Status</th>
                                    <th>CreatedBy</th>
                                    <th>Last Updated On</th>
                                    <th>Edit</th>
                                    <th>Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var Banner in Model.GetBannerList)
                                {
                                <tr id="@Banner.Id">
                                    <td> @Banner.Name</td>
                                    <td>@Banner.Place</td>
                                    <td>@Banner.Size</td>
                                    <td>@Banner.ActionTrigger</td>
                                    <td><span class="badge badge-@(Banner.Status=="Active"?"success":"danger")">@Banner.Status</span></td>
                                    <td>@Banner.CreatedBy</td>
                                    <td>@Banner.UpdatedOn</td>
                                    <td><a href="/Banner/Details/@Banner.DecodeId" class="text-dark"> <i class="flaticon-edit"></i> </a></td>
                                    <td><a href="#" class="text-danger deleteId" data-id="@Banner.Id" id="deleteId"> <i class="flaticon-delete deleteId"> </i></a></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="viewMessage1" value="@(Model.ViewMessage ??"")" />
<input type="hidden" id="errorMessage1" value="@(Model.ErrorMessage ?? "")" />
@section scripts {
    <script src="~/assets/scripts/Banner/Manage.js"></script>    
}