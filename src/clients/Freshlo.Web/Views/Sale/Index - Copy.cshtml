    <script type="text/javascript">
        // defining flags
        var isCtrl = false;
        var isShift = false;
        var isAlt = false;
        // action on key up
        $(document).keyup(function (e) {
            if (e.which == 17) {
                isCtrl = false;
            }
            if (e.which == 16) {
                isShift = false;
            }
            if (e.which == 18) {
                isAlt = false;
            }
        });
        // action on key down
        $(document).keydown(function (e) {
            if (e.which == 17) {
                isCtrl = true;
            }
            if (e.which == 16) {
                isShift = true;
            }
            if (e.which == 18) {
                isAlt = true;
            }
            if (e.which == 67 && isCtrl && isAlt) {
                $("#GetcustomerNo").select2("open");
            }
            if (e.which == 80 && isCtrl && isAlt) {
                $("#temp55").select2("open");
            }
            if (e.which == 65 && isAlt) {
                $("#amount2").focus();
            }
            if (e.which == 13) {
                $("#AddSearchId").click();
            }
        });
    </script>
