@using Freshlo.Web.Models;
@using Freshlo.Web.Helpers;
@using System.Globalization;
@model PaymentSettlementVM;

@{
    ViewData["Title"] = "PaymentSettlement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- BEGIN: Subheader -->

<div class="m-subheader ">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="m-subheader__title m-subheader__title--separator">Payment Settlement</h3>
            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                <li class="m-nav__item m-nav__item--home">
                    <a href="javascripts:;" class="m-nav__link m-nav__link--icon">
                        <i class="m-nav__link-icon la la-home"></i>
                    </a>
                </li>
                <li class="m-nav__separator">-</li>
                <li class="m-nav__item">
                    <a href="/Home/Index/" class="m-nav__link">
                        <span class="m-nav__link-text">Home</span>
                    </a>
                </li>
                <li class="m-nav__separator">-</li>
                <li class="m-nav__item">
                    <a href="/Sale/PaymentSettlementSummary/" class="m-nav__link">
                        <span class="m-nav__link-text">Settlement Summary</span>
                    </a>
                </li>
            </ul>
        </div>
        <div>
            <button type="button" class="btn btn-outline-dark"><i class="fa fa-backward"> </i> Settlement Log</button>
            <button type="button" class="btn btn-success" id="btnSaveSettlement"><i class="la la-save"></i> Save Changes</button>
        </div>
    </div>
</div>
<!-- END: Subheader -->



    <div class="m-content">

        <div class="m-portlet">
            <div class="m-portlet__body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped-even ab-table-head-bg-warning-light table-borderless table-middle m-data-table">
                                <thead>
                                    <tr>
                                        <th>
                                            <div class="kt-checkbox-list">
                                                <label class="kt-checkbox">
                                                    <input type="checkbox" id="selectallid">
                                                    <span></span>
                                                </label>
                                            </div>
                                        </th>
                                        <th>Sales Order ID</th>
                                        <th>Customer Name</th>
                                        <th>Delivered By</th>

                                        <th>Delivery Date</th>
                                        <th>Bill Amount</th>
                                        <th>Payment Settled By</th>
                                        <th>Payment Settlement Status</th>
                                        <th>Payment Status</th>
                                        <th>Payment Mode</th>
                                        <th>Remarks</th>
                                        @*<th>Action</th>*@
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var paymentlist in Model.GetPaymentListToSettled)
                                    {
                                        <tr>
                                            <td>
                                                <div class="kt-checkbox-list">
                                                    <label class="kt-checkbox">
                                                        <input class="messageCheckbox" id="@paymentlist.Id" value="@(paymentlist.SalesOrderId +'_'+paymentlist.Id + '_' +paymentlist.PaymentSettled_By +'_'+paymentlist.PaymentSettled_for)" type="checkbox" name="Check[]"> 
                                                        <span></span>
                                                    </label>
                                                </div>
                                            </td>
                                            <td>
                                                <a href="/Sale/Detail/@paymentlist.SalesOrderId" target="_blank" class="mb-1 font-medium-1 text-bold-600">
                                                    @paymentlist.SalesOrderId
                                                </a>
                                            </td>
                                            <td><span class="text-bold-700 text-dark">@paymentlist.CustomerName</span></td>
                                            <td><span class="text-bold-400"> @paymentlist.DeliveredPerson</span></td>

                                        <td>
                                            <span>@paymentlist.PaymentDeliveredDate.ToString("yyyy-MM-dd hh:mm tt", CultureInfo.InvariantCulture)</span>
                                        </td>
                                        <td>
                                            <span class="font-medium-2 text-bold-600">
                                                @(SalesHelpers.Data) @((paymentlist.TotalPrice)  + Convert.ToDouble(paymentlist.DeliveryCharges)  - paymentlist.Wallet)
                                            </span>
                                        </td>
                                        <td>
                                            <span class="text-bold-400"> @(paymentlist.PaymentSettled_By)</span>
                                            <span class="font-small-3 display-block">@paymentlist.PaymentSettled_for</span>
                                        </td>

                                        <td>
                                            <span class="settledStatus" id="SettledStatus_@paymentlist.Id" name="SettledStatus">@paymentlist.Settlement_Status</span>

                                            @*<select asp-for="@paymentlist.Settlement_Status" class="form-control m-input--solid settledStatus" id="SettledStatus_@paymentlist.Id">
                                                    <option selected disabled>Settlement Status</option>
                                                    <option value="Pending">Pending</option>
                                                    <option value="Paid">Settled</option>
                                                </select>*@
                                            </td>
                                            <td>@paymentlist.PaymentStatus</td>
                                            <td>@paymentlist.PaymentMode</td>
                                            @*<td>
                                                    <select asp-for="@paymentlist.PaymentMode" class="form-control m-input--solid" id="PaymentMode_@paymentlist.Id">
                                                        <option selected disabled>Settlement Status</option>
                                                        <option value="Cash">Cash</option>
                                                        <option value="Online">Online</option>
                                                    </select>
                                                </td>*@
                                            <td>
                                                @*<input asp-for="@paymentlist.SalesOrderId" type="hidden" name="multiSalesOrderId" />
                                                <input asp-for="@paymentlist.Id" type="hidden" name="multiId" />
                                                <input asp-for="@paymentlist.PaymentSettled_By" type="hidden" name="multiPaymentSettled_By" />
                                                <input asp-for="@paymentlist.PaymentSettled_for" type="hidden" name="multiPaymentSettled_for" />*@

                                            <input asp-for="@paymentlist.Description" type="text" id="Description_@paymentlist.Id" name="Description" />
                                        </td>
                                        @*<td>
                                                <a href="#" class="btn btn-danger m-btn--icon btn-sm updatepayment" data-id="@(paymentlist.SalesOrderId +'_'+paymentlist.Id + '_' +paymentlist.PaymentSettled_By +'_'+paymentlist.PaymentSettled_for)"><i class="fa fa-save"></i> Save</a>
                                            </td>*@
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/assets/app/js/datatable.js"></script>
    <script src="~/assets/scripts/sales/PaymentSettlement.js"></script>

    }