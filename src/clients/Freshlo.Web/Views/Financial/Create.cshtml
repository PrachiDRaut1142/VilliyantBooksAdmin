                                <div class="col-md-3 col-sm-3 col-6">
                                    <input type="text" class="form-control m-input m-input--solid" id="" name="Other_Payment" placeholder="Enter " />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-sm-12 col-12 col-form-label">Reference Number ( PO / Bill )  <span class="text-warning">*</span></label>
                                <div class="col-md-3 col-sm-3 col-6">
                                    <input type="text" class="form-control m-input m-input--solid" id="" name="Reference_No" autocomplete="off" placeholder="Enter Refecent Number ( PO / Bill )" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-sm-12 col-12 col-form-label">Recieved From <span class="text-warning">*</span></label>
                                <div class="col-md-3 col-sm-3 col-6">
                                    <input type="text" class="form-control m-input m-input--solid" id="" name="Received_From"  autocomplete="off" placeholder="Enter Recieved From" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-sm-12 col-12 col-form-label">Payment Status  <span class="text-warning">*</span></label>
                                <div class="col-md-3 col-sm-3 col-6">
                                    <select class="form-control m-input m-input--solid" name="Payment_Status" id="PaymentStatus">
