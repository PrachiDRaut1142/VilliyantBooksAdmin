                                        <option value="1">Paid Fully </option>
                                        <option value="2">Pending</option>
                                        <option value="3">Partailly Paid</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-sm-12 col-12 col-form-label">Total Amount<span class="text-warning">*</span></label>
                                <div class="col-md-3 col-sm-3 col-6">
                                    <input type="text" class="form-control m-input m-input--solid" id="" name="Total_Amount" autocomplete="off" placeholder="Enter Amount" />
                                </div>
                            </div>
                            <div class="form-group row 3paymentStatus paymentAmountShow">
                                <label class="col-md-3 col-sm-12 col-12 col-form-label">Partial Amount<span class="text-warning">*</span></label>
                                <div class="col-md-3 col-sm-3 col-6">
                                    <input type="text" class="form-control m-input m-input--solid" id="" name="Partail_Amount"  autocomplete="off" placeholder="Enter Partial Amount" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-sm-12 col-12 col-form-label">Payment Mode  <span class="text-warning">*</span></label>
                                <div class="col-md-3 col-sm-3 col-6">
                                    <select class="form-control m-input m-input--solid" name="Payment_Mode">
                                        <option selected disabled>Select Payment Mode</option>
                                        <option value="1">Online </option>
                                        <option value="2">Cash</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-sm-12 col-12 col-form-label">Recieved On  <span class="text-warning">*</span></label>
                                <div class="col-md-3 col-sm-3 col-6">
                                    <div class="input-group date">
                                        <input type="text" id="m_datetimepicker_8" name="Paid_On" autocomplete="off" class="form-control m-input m-input--solid" placeholder="Paid On" />
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-calendar-check-o"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-sm-12 col-12 col-form-label">Remarks</label>
                                <div class="col-md-3 col-sm-3 col-6">
                                    <textarea rows="3" class="form-control m-input m-input--solid" id="" name="Remark" placeholder="Enter Remark"></textarea>
                                </div>
                            </div>

                        </form>
                        <hr />
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label"></label>
                            <div class="col-md-9 col-sm-9 col-6">
                                <button type="button" class="btn btn-success mr-2" id="submitForm1" name="nextBtn" value="1"><i class="la la-upload"></i> Submit </button>
                                <button type="reset" class="btn btn-link" id="clearBtn"><i class="la la-times"></i> Clear</button>
                            </div>
                        </div>
                    </div>
                    <div class="entryTypeshow 2">
                        <hr />
                        <form class="m-form m-form--fit m-form--label-align-right" asp-controller="Financial" asp-action="Create" id="createForm2" method="post">
                            <input hidden id="FEntry_Type2" name="Entry_Type" value="" />
                            <div class="form-group row">
                                <label class="col-md-3 col-sm-12 col-12 col-form-label">Payment Type</label>
                                <div class="col-md-3 col-sm-3 col-6">
                                    <select class="form-control m-input m-input--solid" name="Outward_Payment_Type" asp-items="@FinanceHelper.OutwardList">
                                        <option selected disabled>Select Payment Type</option>
                                     
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-sm-12 col-12 col-form-label">Reference Number ( PO / Bill )  <span class="text-warning">*</span></label>
                                <div class="col-md-3 col-sm-3 col-6">
                                    <input type="text" class="form-control m-input m-input--solid" id="" name="Reference_No"  autocomplete="off" placeholder="Enter Refecent Number ( PO / Bill )" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-sm-12 col-12 col-form-label">Paid To / Vendor Name <span class="text-warning">*</span></label>
                                <div class="col-md-3 col-sm-3 col-6">
