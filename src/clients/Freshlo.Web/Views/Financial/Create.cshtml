                                <label class="col-md-3 col-sm-12 col-12 col-form-label">Payment Type</label>
                                <div class="col-md-3 col-sm-3 col-6">
                                    <select class="form-control m-input m-input--solid" id="paymentType" name="Inward_Payment_Type" asp-items="@FinanceHelper.InwardList">
