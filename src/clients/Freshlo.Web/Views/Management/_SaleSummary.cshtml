@using Freshlo.Web.Models.DashboardVM;
@using Freshlo.Web.Helpers;
@using System.Globalization
@model FinancialDashboardVM;

@{
    ViewData["Title"] = "_SaleSummary";
     var currencySymbol = Model.getCurrencysybmollist.FirstOrDefault(x => x.status == 1).symbol;
}


<div>
     <div class="row mt-3">
         <div class="col">
              <div class="card card-stats mb-4 mb-xl-0">
                <div class="card-body">
                  <div class="row">
                    <div class="col"  id="Overall1">
                      <h5 class="card-title text-uppercase text-muted mb-1">Overall</h5>
                      <span class="h2 font-weight-bold text-dark"  id="Overall1"><small><span class="CurrencyData">@currencySymbol</span></small>@Model.GetallCountDashbaord.TotalOrderReceivedAmount.ToString("#,##0.00") <small style="display: block;">(@Model.GetallCountDashbaord.TotalOrderReceived.ToString("#,##0"))</small></span>
                    </div>
                    <div class="col-auto">
                      <div class="icon icon-shape bg-dark text-white rounded-circle shadow">
                        <img src="~/assets/img/payment-status/cash.png" alt="payment" />
                      </div>
                    </div>
                  </div>
                  <p class="mt-3 mb-0 text-muted text-sm">
                   @* <span class="text-success mr-2"><i class="fa fa-arrow-up"></i> </span>*@
                   @* <span class="text-nowrap">Last 30 Day</span>*@
                  </p>
                </div>
              </div>
            </div>   
         <div class="col">
              <div class="card card-stats mb-4 mb-xl-0">
                <div class="card-body">
                  <div class="row">
                    <div class="col"  id="OrderReceived1">
                      <h5 class="card-title text-uppercase text-muted mb-1">Cash</h5>
                      <span class="h2 font-weight-bold text-success"  id="order"><small><span class="CurrencyData">@currencySymbol</span></small>@Model.GetallCountDashbaord.TotalCashSaleTotalAmount.ToString("#,##0.00") <small style="display: block;" >(@Model.GetallCountDashbaord.TotalCashSaleAmountCount.ToString("#,##0"))</small></span>
                    </div>
                    <div class="col-auto">
                      <div class="icon icon-shape bg-success text-white rounded-circle shadow">
                        <img src="~/assets/img/payment-status/cash.png" alt="payment" />
                      </div>
                    </div>
                  </div>
                  <p class="mt-3 mb-0 text-muted text-sm">
                   @* <span class="text-success mr-2"><i class="fa fa-arrow-up"></i> </span>*@
                   @* <span class="text-nowrap">Last 30 Day</span>*@
                  </p>
                </div>
              </div>
            </div>
            <div class="col">
              <div class="card card-stats mb-4 mb-xl-0">
                <div class="card-body">
                  <div class="row">
                    <div class="col" id="upi1">
                      <h5 class="card-title text-uppercase text-muted mb-1">UPI</h5>
                      <span class="h2 font-weight-bold text-warning"><small><span class="CurrencyData">@currencySymbol</span></small>@Model.GetallCountDashbaord.TOTAlGpayphoneAmount.ToString("#,##0.00") <small style="display: block;">(@Model.GetallCountDashbaord.TOTAlGpayphoneCount.ToString("#,##0"))</small></span>
                    </div>
                    <div class="col-auto">
                      <div class="icon icon-shape bg-warning text-white rounded-circle shadow">
                       <img src="~/assets/img/payment-status/UPI.png" alt="payment" />
                      </div>
                    </div>
                  </div>
                  <p class="mt-3 mb-0 text-muted text-sm">
                   @* <span class="text-warning mr-2"><i class="fas fa-arrow-down"></i> 3000/15000</span>*@
                    @*<span class="text-nowrap">Last 30 Day</span>*@
                  </p>
                </div>
              </div>
            </div>
            <div class="col">
              <div class="card card-stats mb-4 mb-xl-0">
                <div class="card-body">
                  <div class="row">
                    <div class="col" id="Card1">
                      <h5 class="card-title text-uppercase text-muted mb-1">Card</h5>
                      <span class="h2 font-weight-bold text-primary"><small><span class="CurrencyData">@currencySymbol</span></small>@Model.GetallCountDashbaord.TotalCardSaleTotalAmount.ToString("#,##0.00") <small style="display: block;">(@Model.GetallCountDashbaord.TotalCardSaleAmountCount.ToString("#,##0"))</small></span>
                    </div>
                    <div class="col-auto">
                      <div class="icon icon-shape bg-primary text-white rounded-circle shadow">
                       <img src="~/assets/img/payment-status/card.png" alt="payment" />
                      </div>
                    </div>
                  </div>
                  <p class="mt-3 mb-0 text-muted text-sm">
                   @* <span class="text-primary mr-2"><i class="fas fa-arrow-down"></i> 1.10%</span>*@
                    @*<span class="text-nowrap">Last 30 Day</span>*@
                  </p>
                </div>
              </div>
            </div>
            <div class="col">
              <div class="card card-stats mb-4 mb-xl-0">
                <div class="card-body">
                  <div class="row">
                    <div class="col" id="PendingPayment1">
                      <h5 class="card-title text-uppercase text-muted mb-1">Pending</h5>
                      <span class="h2 font-weight-bold text-danger"><span class="CurrencyData">@currencySymbol</span>@Model.GetallCountDashbaord.TotalOverallPendingPaymenttotalAmount.ToString("#,##0.00") <small style="display: block;" class="">(@Model.GetallCountDashbaord.TotalOverallPendingPaymentCount.ToString("#,##0"))</small></span>
                    </div>
                    <div class="col-auto">
                      <div class="icon icon-shape bg-danger text-white rounded-circle shadow">
                        <img src="~/assets/img/payment-status/pending.png" alt="payment" />
                      </div>
                    </div>
                  </div>
                  <p class="mt-3 mb-0 text-muted text-sm">
                    @*<span class="text-danger mr-2"><i class="fas fa-arrow-up"></i>52%</span>*@
                    @*<span class="text-nowrap">Last 30 Day</span>*@
                  </p>
                </div>
              </div>
            </div>
          </div>
</div>