    <script>
        var iframeContainer = document.getElementById("iframe-container");
        var iframe = document.getElementById("my-iframe");

        // Variables to track mouse/touch events
        var isDragging = false;
        var startPosition = null;

        // Add event listeners for mouse/touch events
        iframeContainer.addEventListener("mousedown", startDrag);
        iframeContainer.addEventListener("touchstart", startDrag);

        document.addEventListener("mouseup", endDrag);
        document.addEventListener("touchend", endDrag);

        document.addEventListener("mousemove", handleDrag);
        document.addEventListener("touchmove", handleDrag);

        function startDrag(event) {
            isDragging = true;
            startPosition = {
                x: event.clientX || event.touches[0].clientX,
                y: event.clientY || event.touches[0].clientY
            };
            event.preventDefault();
        }

        function endDrag() {
            isDragging = false;
        }

        function handleDrag(event) {
            if (!isDragging) return;
            var currentPosition = {
                x: event.clientX || event.touches[0].clientX,
                y: event.clientY || event.touches[0].clientY
            };
            var deltaX = currentPosition.x - startPosition.x;
            var deltaY = currentPosition.y - startPosition.y;
            iframe.contentWindow.scrollBy(deltaX, deltaY);
            startPosition = currentPosition;
            event.preventDefault();
        }

