@using Freshlo.Web.Models.ItemMaster;
@model ItemMasterVM;

@foreach (var detail in Model.getItemMasterList) 
{
    if (detail.MeasuredIn == "S" || detail.MeasuredIn == "W" || detail.MeasuredIn == "Q" || detail.MeasuredIn == "V" || detail.MeasuredIn == "D" || detail.MeasuredIn == "L" || detail.MeasuredIn == "C")
    {
        <tr id="@detail.Size">
            <td id="size_@detail.Size">@detail.Size</td>
            <td>@detail.MarketPrice<span class="" id="currencyData">@Model.getccurrencylist.FirstOrDefault(x => x.status == 1).symbol</span></td>
            <td>@detail.SellingPrice<span class="" id="currencyData">@Model.getccurrencylist.FirstOrDefault(x => x.status == 1).symbol</span></td>
            <td>@detail.Purchaseprice<span class="" id="currencyData">@Model.getccurrencylist.FirstOrDefault(x => x.status == 1).symbol</span></td>
            <td>@detail.Barcode</td>
            <td>
                <a href="#" class="text-dark SizeDetails" onclick="EditSize('@detail.PId')" data-toggle="modal" data-id="@detail.PId">
                    <i class="flaticon-edit"></i>
                </a>
            </td>
            <td>
                <a href="#" class="text-link" onclick="Removesize('@detail.PriceId')" ; id="@detail.Size" title="Remove">
                    <i class="flaticon-delete text-danger"></i>
                    <span class="Spn_@detail.Size" hidden id="Spn_@detail.Size" ;>size</span>
                    <span class="Spnsize_@detail.PriceId" hidden id="Spnsize_@detail.PriceId" ;>@detail.PriceId</span>
                </a>
            </td>

        </tr>

    }



