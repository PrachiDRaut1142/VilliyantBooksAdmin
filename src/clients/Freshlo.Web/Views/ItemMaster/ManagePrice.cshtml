                                        </div>
                                    </div>
                                    <div class="kt-widget__item pt-3 pb-3">
                                        <div class="kt-widget__icon">
                                            <i class="flaticon-file-2"></i>
                                        </div>
                                        <div class="kt-widget__details">
                                            <span class="kt-widget__title">Coupon Excluded</span>
                                            <span class="kt-widget__value"><span></span>@Model.Getitemcount.coupenexcluded</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="m-portlet">
                    <div class="m-portlet m-portlet--tabs">
                        <ul class="nav nav-tabs m-tabs-line m-nav-tab-account-lookup Mainul" role="tablist">
                            <li class="nav-item m-tabs__item" style="display:none">
                                <a class="nav-link m-tabs__link" data-toggle="tab" name="MainList" href="#itemInfo" role="tab">
                                    <i class="flaticon-info"></i> Main Item List
                                </a>
                            </li>
                            <li class="nav-item m-tabs__item">
                                <a class="nav-link m-tabs__link active" id="recentlyAccessed" name="includeItemList" data-toggle="tab" href="#RecentlyAccesed" role="tab">
                                    <i class="flaticon-list-3"></i> Included Hub List
                                </a>
                            </li>
                            <li class="nav-item m-tabs__item">
                                <a class="nav-link m-tabs__link" id="excludeItem" name="excludeItemList" data-toggle="tab" href="#ExcludeItem" role="tab">
                                    <i class="flaticon-list-3"></i> Excluded Hub List
                                </a>
                            </li>

                        </ul>

                        <div class="m-portlet__body">

                            <div class="tab-content">
                                <!--Main List Start Here-->
                                <div class="tab-pane" id="itemInfo" role="tabpanel" style="display:none">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <form id="ItemFormId" method="post" asp-controller="ItemMaster" asp-action="Manage">
                                                <div class="" id="MainList" role="tabpanel">
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <!--Main List End Here-->

                                <!--Include List Start Here-->
                                <div class="tab-pane active" id="RecentlyAccesed" role="tabpanel">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <form id="ItemFormId" method="post" asp-controller="ItemMaster" asp-action="Manage">
                                                <div class="" id="includeItemList" role="tabpanel">
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <!--Include List End Here-->

                                <!--Exclude List Start Here-->
                                <div class="tab-pane" id="ExcludeItem" role="tabpanel">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <form id="ItemFormId" method="post" asp-controller="ItemMaster" asp-action="Manage">
                                                <div class="" id="excludeItemList" role="tabpanel">
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <!--Exclude List End Here-->

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
