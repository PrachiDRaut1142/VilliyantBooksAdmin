<!-- END: Subheader -->
<div class="m-content">


    <div class="row">
        <div class="col-md-12">

            <!--begin::Portlet-->
            <div class="m-portlet">
                @*<div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    Filters
                                </h3>
                            </div>
                        </div>
                    </div>*@
                <div class="m-portlet__body p-0">
                    <!--begin::Section-->
                    <div class="m-accordion m-accordion--default" id="m_accordion_1" role="tablist">
                        <!--begin::Item-->
                        <div class="m-accordion__item">
                            <div class="m-accordion__item-head collapsed" role="tab" id="m_accordion_1_item_1_head" data-toggle="collapse" href="#m_accordion_1_item_1_body" aria-expanded="false">
                                <span class="m-accordion__item-icon"><i class="fa fa-filter"></i></span>
                                <span class="m-accordion__item-title">Filters</span>
                                <span class="m-accordion__item-mode"></span>
                            </div>
                            <div class="m-accordion__item-body collapse" id="m_accordion_1_item_1_body" role="tabpanel" aria-labelledby="m_accordion_1_item_1_head" data-parent="#m_accordion_1">
                                <div class="m-accordion__item-content p-2">
                                    <div class="m-portlet__body">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>Main Category</label>
                                                    <select class="form-control m-bootstrap-select m_selectpicker m-input m-input--solid" id="MainCategory" data-live-search="true" multiple>
                                                        @foreach (var mc in Model.GetMainCategoryList)
                                                        {
                                                            <option value="'@mc.Value'">@mc.Text</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>Category</label>
                                                    <select class="form-control m-bootstrap-select m_selectpicker m-input m-input--solid" id="Category" data-live-search="true" multiple>
                                                        @foreach (var c in Model.getCattegorylist)
                                                        {
                                                            <option value="'@c.CategoryId'">@c.Name</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>Sub Category</label>
                                                    <select class="form-control m-bootstrap-select m_selectpicker m-input m-input--solid" id="SubCategory" data-live-search="true" multiple>
                                                        @foreach (var sc in Model.GetSubCategory)
                                                        {
                                                            <option value="'@sc.Value'">@sc.Text</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>Suplier</label>
                                                    <select class="form-control m-bootstrap-select m_selectpicker m-input m-input--solid" id="Supplierid" data-live-search="true" multiple>
                                                        @foreach (var su in Model.SupplierNameList)
                                                        {
                                                            <option value="'@su.Value'">@su.Text</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>Featured</label>
                                                    <select class="form-control m-bootstrap-select m_selectpicker m-input m-input--solid" id="FeaturedId" multiple>
                                                        <option value="'Y'">YES</option>
                                                        <option value="'N'">NO</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>Status</label>
                                                    <select class="form-control m-bootstrap-select m_selectpicker m-input m-input--solid" id="ItemStatus">
                                                        <option value="1">Approved</option>
                                                        <option value="2">Pending</option>
                                                    </select>
                                                </div>
                                            </div>
                                            
                                            <div class="col-md-3" hidden>
                                                <div class="form-group">
                                                    <label>KOT Printed ?</label>
                                                    <select class="form-control m-bootstrap-select m_selectpicker m-input m-input--solid" id="KotPrintedId" multiple>
                                                        <option value="1">YES</option>
                                                        <option value="2">NO</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label class="" style="visibility:hidden;">Action</label>
                                                    <div class="d-block">
                                                        <button type="button" class="btn btn-dark" id="btnFilterItem">Apply</button>
                                                        <button type="button" class="btn btn-link" id="btnClearFilter">Clear</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--end::Item-->
                    </div>
                    <!--end::Section-->
                </div>
            </div>
            <!--end::Portlet-->
            <div class="m-portlet">
                <div class="m-portlet__body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="kt-widget kt-widget--user-profile-3">
                                <div class="kt-widget__bottom pl-4 pr-4 mt-0 mb-0" style="border-top: 0px solid #ebedf2;">
                                    <div class="kt-widget__item pt-3 pb-3">
                                        <div class="kt-widget__icon">
                                            <i class="flaticon-box"></i>
                                        </div>
                                        <div class="kt-widget__details">
                                            <span class="kt-widget__title">Active Items</span>
                                            <span class="kt-widget__value"><span></span>@Model.Getitemcount.Activeitem</span>
                                        </div>
                                    </div>
                                    <div class="kt-widget__item pt-3 pb-3">
                                        <div class="kt-widget__icon">
                                            <i class="flaticon-box"></i>
                                        </div>
                                        <div class="kt-widget__details">
                                            <span class="kt-widget__title">Pending Approvals</span>
                                            <span class="kt-widget__value text-danger"><span></span>@Model.Getitemcount.PendingApproval</span>
                                        </div>
                                    </div>
                                    <div class="kt-widget__item pt-3 pb-3">
                                        <div class="kt-widget__icon">
                                            <i class="flaticon-confetti"></i>
                                        </div>
                                        <div class="kt-widget__details">
                                            <span class="kt-widget__title">Featured Items</span>
                                            <span class="kt-widget__value"><span></span>@Model.Getitemcount.Featureditem</span>
                                        </div>
                                    </div>
                                    <div class="kt-widget__item pt-3 pb-3">
                                        <div class="kt-widget__icon">
                                            <i class="flaticon-file-2"></i>
                                        </div>
                                        <div class="kt-widget__details">
                                            <span class="kt-widget__title">Coupon Excluded</span>
                                            <span class="kt-widget__value"><span></span>@Model.Getitemcount.coupenexcluded</span>
                                        </div>
                                    </div>
                                    <div class="kt-widget__item pt-3 pb-3">
                                        <div class="kt-widget__icon">
                                            <i class="flaticon-box"></i>
                                        </div>
                                        <div class="kt-widget__details">
                                            <span class="kt-widget__title">Deleted Items</span>
                                            <span class="kt-widget__value text-danger"><span></span>@Model.Getitemcount.Deleteditem</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="m-portlet">
                <div class="m-portlet__body">
                    <form id="ItemFormId" method="post" asp-controller="ItemMaster" asp-action="Manage">
                        <div class="" id="itemMaster01" role="tabpanel">
                        </div>
                    </form>
                </div>
                @*<div class="m-portlet" id="divtabrole">
                        <ul class="nav nav-tabs  m-tabs-line m-nav-tab-account-lookup " role="tablist">
                            <li class="nav-item m-tabs__item">
