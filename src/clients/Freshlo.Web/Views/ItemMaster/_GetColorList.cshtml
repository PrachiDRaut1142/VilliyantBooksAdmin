@using Freshlo.Web.Models.ItemMaster;
@model ItemMasterVM;

@foreach (var detail in Model.ItemColorInfo)
{
    <tr id="@detail.Color">
        <td id="color_">@detail.Color</td>
        <td>
            <div class="kt-list-pics kt-list-pics--sm">
                <a href="#"><img src="https://freshlo.oss-ap-south-1.aliyuncs.com/HurTex/color-variance/@(detail.ColorId).png" style="width: 50px; height: 50px;" title=""></a>
            </div>
        </td>
        <td>
            <a href="#" onclick="Removecolor('@detail.Color')" ; class="text-link" title="Remove">
                <i class="flaticon-delete text-danger"></i>
                <span hidden id="Spn_@detail.Color" ;>color</span>
                <span hidden id="Spncolor_@detail.Color" ;>@detail.ColorId</span>
            </a>
        </td>
    </tr>
}
