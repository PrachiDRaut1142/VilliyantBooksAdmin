@using Freshlo.Web.Models.ItemMaster;
@model ItemMasterVM;

@foreach (var detail in Model.MappedItemList)
{
    <tr id="@detail.ItemId">
        <td id="color_">@detail.Itemname</td>
        <td id="color_">@detail.MainCategory</td>
        <td id="color_">@detail.Category</td>
        <td>
            <div class="kt-list-pics kt-list-pics--sm">
                <a href="#"><img src="@detail.ItemImage" style="width: 50px; height: 50px;" title=""></a>
            </div>
        </td>
        <td>
            <a href="#" class="text-link delete-item" id="deletemapitem" data-Id="@detail.ItemId" data-ItemId="@detail.MappingItemId" title="Remove">
                <i class="flaticon-delete text-danger"></i>
            </a>
        </td>
    </tr>
}
