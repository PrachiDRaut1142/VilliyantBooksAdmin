                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="" class="col-3 col-form-label">IsEnable SnapChat</label>
                            <div class="col-9">
                                <div class="row">
                                    <div class="col-1">
                                        <fieldset class="col-form-label float-left">
                                            <label class="ab-switch mb-0">
                                                <input type="checkbox" value="true" name="IsSnapchatEnable" id="IsSnapchatEnable" checked="@(Model.getHubdetails.IsSnapchatEnable?"checked":null)">
                                                <span class="slider round"></span>
                                            </label>
                                        </fieldset>
                                    </div>
                                    <div class="col-8 snapChatLink" style="display:none">
                                        <input type="text" class="form-control m-input m-input--solid SnapChatLink SpaceValidation" asp-for="@Model.getHubdetails.SnapChatLink" id="SnapChatLink" name="SnapChatLink" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="" class="col-3 col-form-label">IsEnable LinkedIn</label>
                            <div class="col-9">
                                <div class="row">
                                    <div class="col-1">
                                        <fieldset class="col-form-label float-left">
                                            <label class="ab-switch mb-0">
                                                <input type="checkbox" value="true" name="IsLinkedInEnable" id="IsLinkedInEnable" checked="@(Model.getHubdetails.IsLinkedInEnable?"checked":null)">
                                                <span class="slider round"></span>
                                            </label>
