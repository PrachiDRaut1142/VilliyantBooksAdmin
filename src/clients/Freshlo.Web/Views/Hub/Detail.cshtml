                                                <input type="checkbox" value="true" name="IsFacebookEnable" id="IsFacebookEnable" checked="@(Model.getHubdetails.IsFacebookEnable?"checked":null)">
                                                <span class="slider round"></span>
                                            </label>
                                        </fieldset>
                                    </div>
                                    <div class="col-8 facebookLink" style="display:none">
                                        <input type="text" class="form-control m-input m-input--solid FacebookLink SpaceValidation" asp-for="@Model.getHubdetails.FacebookLink" id="FacebookLink" name="FacebookLink" />
                                    </div>
                                </div>
                            </div>
