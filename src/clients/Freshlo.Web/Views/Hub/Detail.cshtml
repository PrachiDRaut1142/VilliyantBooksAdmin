                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <span class="m-portlet__head-icon m--hide">
                                <i class="la la-gear"></i>
                            </span>
                            <h3 class="m-portlet__head-text">Branch Details</h3>
                        </div>
                    </div>
                </div>
                <div class="m-portlet__body">
                    <form class="m-form m-form--fit m-form--label-align-right" enctype="multipart/form-data" method="post" asp-action="Detail" asp-controller="Hub" id="UpdateHub">
                        <input type="text" class="form-control m-input m-input--solid id" asp-for="@Model.getHubdetails.Id" id="id" name="id" hidden>
                        <div class="form-group row">
                            <label class="col-md-3 col-sm-12 col-12 col-form-label">Branch Name <span class="text-warning">*</span></label>
                            <div class="col-md-3 col-sm-3 col-6">
                                <input type="text" class="form-control m-input m-input--solid SpaceValidation HubName" asp-for="@Model.getHubdetails.HubName" id="HubName" name="HubName" placeholder="Enter Branch Name" />
                                <span class="text-danger font-small-3 " style="display:none;" id="SpnHubName"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-sm-12 col-12 col-form-label">Branch Contact No <span class="text-warning">*</span></label>
                            <div class="col-md-3 col-sm-3 col-6">
                                <input type="text" class="form-control m-input m-input--solid SpaceValidation ContactNo" id="ContactNo" asp-for="@Model.getHubdetails.ContactNo" name="ContactNo" placeholder="Enter Branch Contact No">
                                <span class="text-danger font-small-3 text-bold-600" style="display:none;" id="SpnContactNo"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-sm-12 col-12 col-form-label">Branch Email </label>
                            <div class="col-md-3 col-sm-3 col-6">
                                <input type="text" class="form-control m-input m-input--solid SpaceValidation BrnachEmail" id="BrnachEmail" asp-for="@Model.getHubdetails.BrnachEmail" name="BrnachEmail" placeholder="Enter Branch Contact No">
                                <span class="text-danger font-small-3" style="display:none;" id="SpnBrnachEmail"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-sm-12 col-12 col-form-label">Branch Notify Email </label>
                            <div class="col-md-3 col-sm-3 col-6">
                                <input type="text" class="form-control m-input m-input--solid SpaceValidation BranchNotifyEmail" asp-for="@Model.getHubdetails.BranchNotifyEmail" id="BranchNotifyEmail" name="BranchNotifyEmail" placeholder="Enter Branch Contact No">
                                <span class="text-danger font-small-3 " style="display:none;" id="SpnBranchNotifyEmail"></span>
                            </div>
                        </div>
                         <div class="form-group row">
                        <label class="col-md-3 col-form-label">Currency</label>
                        <div class="col-md-3">
                            <select class="form-control m-input--solid clear-cls" asp-for="@Model.getHubdetails.currency"  name="currency"  id="currency">
                                <option value="0" selected disabled>Select Currency</option>
                                @foreach (var item in Model.getCurrencyList)
                                {
                                    <option value="@item.ShortCode" data-value="@item.symbol">@item.ShortCode</option>

                                }
                            </select>
                            <span class="error font-small-3 error-empty-cls" id="Currency" style="display: none; color: red;"></span>
                        </div>
                    </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-sm-12 col-12 col-form-label">Area </label>
                            <div class="col-md-3 col-sm-3 col-6">
                                <input type="text" class="form-control m-input m-input--solid Area SpaceValidation" asp-for="@Model.getHubdetails.Area" id="Area" name="Area" placeholder="Enter Area Here" />
                                <span class="text-danger font-small-3" style="display:none;"></span>
                            </div>
                        </div>
                        <hr>
                        <div class="form-group row">
                            <label class="col-md-3 col-sm-12 col-12 col-form-label">Bulding Name</label>
                            <div class="col-md-3 col-sm-3 col-6">
                                <input type="text" class="form-control m-input m-input--solid BuildingName SpaceValidation" asp-for="@Model.getHubdetails.BuildingName" id="BuildingName" name="BuildingName" placeholder="Enter Block No" />
                                <span class="text-danger font-small-3 " style="display:none;"></span>
                            </div>
                        </div>
                        <div class="form-group row" style="display:none">
                            <label class="col-md-3 col-sm-12 col-12 col-form-label">Shop Number</label>
                            <div class="col-md-3 col-sm-3 col-6">
                                <input type="text" class="form-control m-input m-input--solid RoomNo SpaceValidation" asp-for="@Model.getHubdetails.RoomNo" id="RoomNo" name="RoomNo" placeholder="Enter Shop Number" />
                                <span class="text-danger font-small-3" style="display:none;"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-sm-12 col-12 col-form-label">Street Name / Sector Number </label>
                            <div class="col-md-3 col-sm-3 col-6">
                                <input type="text" class="form-control m-input m-input--solid Sector SpaceValidation" asp-for="@Model.getHubdetails.Sector" id="Sector" name="Sector" placeholder="Enter Street Name / Sector Number *">
                                <span class="text-danger font-small-3" style="display:none;"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-sm-12 col-12 col-form-label">LandMark </label>
                            <div class="col-md-3 col-sm-3 col-6">
                                <input type="text" class="form-control m-input m-input--solid Landmark SpaceValidation" asp-for="@Model.getHubdetails.Landmark" id="Landmark" name="Landmark" placeholder="Enter LandMark" />
                                <span class="text-danger font-small-3" style="display:none;"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-sm-12 col-12 col-form-label">MapCode</label>
                            <div class="col-md-3 col-sm-3 col-6">
                                <input type="text" class="form-control m-input m-input--solid MapCode SpaceValidation" asp-for="@Model.getHubdetails.MapCode" id="MapCode" name="MapCode" placeholder="Enter Branch Contact No">
                                <span class="text-danger font-small-3" style="display:none;"></span>
                            </div>
                        </div>
                        <hr>
                        <div class="form-group row">
                            <label class="col-md-3 col-sm-12 col-12 col-form-label">City </label>
                            <div class="col-md-3 col-sm-3 col-6">
                                <input type="text" class="form-control m-input m-input--solid City SpaceValidation" asp-for="@Model.getHubdetails.City" id="City" name="City" placeholder="Enter City" />
                                <span class="text-danger font-small-3 " style="display:none;"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-sm-12 col-12 col-form-label">Governate</label>
                            <div class="col-md-3 col-sm-3 col-6">
                                <input type="text" class="form-control m-input m-input--solid State SpaceValidation" asp-for="getHubdetails.State" id="State" name="State" placeholder="Enter Governate">
                                <span class="text-danger font-small-3 " style="display:none;"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-sm-12 col-12 col-form-label">Country </label>
                            <div class="col-md-3 col-sm-3 col-6">
                                <input type="text" class="form-control m-input m-input--solid Country SpaceValidation" asp-for="@Model.getHubdetails.Country" id="Country" name="Country" placeholder="Enter Country" />
                                <span class="text-danger font-small-3" style="display:none;"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="" class="col-3 col-form-label">IsEnable Facebook</label>
