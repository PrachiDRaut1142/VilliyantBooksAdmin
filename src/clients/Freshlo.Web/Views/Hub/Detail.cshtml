                                <div class="row">
                                    <div class="col-1">
                                        <fieldset class="col-form-label float-left">
                                            <label class="ab-switch mb-0">
                                                <input type="checkbox" value="true" name="IsGoogleReviewEnable" id="IsGoogleReviewEnable" checked="@(Model.getHubdetails.IsGoogleReviewEnable?"checked":null)">
