                                        <fieldset class="col-form-label float-left">
                                            <label class="ab-switch mb-0">
                                                <input type="checkbox" name="IsInstaEnable" id="IsInstaEnable" value="true" checked="@(Model.getHubdetails.IsInstaEnable?"checked":null)">
                                                <span class="slider round"></span>
                                            </label>
                                        </fieldset>
                                    </div>
                                    <div class="col-8 instaLink" style="display:none">
                                        <input type="text" class="form-control m-input m-input--solid InstaLink SpaceValidation" asp-for="@Model.getHubdetails.InstaLink" id="InstaLink" name="InstaLink" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="" class="col-3 col-form-label">IsEnable Twitter</label>
                            <div class="col-9">
                                <div class="row">
                                    <div class="col-1">
                                        <fieldset class="col-form-label float-left">
                                            <label class="ab-switch mb-0">
                                                <input type="checkbox" value="true" name="IsTwitterEnable" id="IsTwitterEnable" checked="@(Model.getHubdetails.IsTwitterEnable?"checked":null)">
                                                <span class="slider round"></span>
