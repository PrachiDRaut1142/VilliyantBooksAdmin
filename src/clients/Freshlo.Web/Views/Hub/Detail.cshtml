                                                <input type="checkbox" value="true" name="IsYoutubeEnable" id="IsYoutubeEnable" checked="@(Model.getHubdetails.IsYoutubeEnable?"checked":null)">
                                                <span class="slider round"></span>
                                            </label>
                                        </fieldset>
