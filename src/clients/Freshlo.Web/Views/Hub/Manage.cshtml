@using Freshlo.Web.Models.HubVM;
@model HubVM
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- BEGIN: Subheader -->
<div class="m-subheader ">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="m-subheader__title m-subheader__title--separator">Hub Management</h3>            
        </div>
        <div>
            <button type="button" class="btn btn-dark" onclick="window.location.href='/Hub/Create/'"><i class="la la-plus"></i> Create New</button>
        </div>
    </div>
</div>
<!-- END: Subheader -->

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <span class="m-portlet__head-icon m--hide">
                        <i class="la la-gear"></i>
                    </span>
                    <h3 class="m-portlet__head-text">
                        List of Hub
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-striped-even ab-table-head-bg-warning-light table-borderless table-middle hubmanage">
                            <thead>
                                <tr>
                                    <th>Hub Id</th>
                                    <th>Hub Name</th>
                                    <th>Location</th>
                                    <th>Created By</th>
                                    <th>Last Updated On</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.getHublist)
                                {
                                    <tr>
                                        <td>@item.HubId</td>
                                        <td>@item.HubName</td>
                                        <td>@item.Area</td>
                                        <td>@item.CreatedBy</td>
                                        <td>@item.LastUpdatedOn</td>
                                        <td><a href="/Hub/Detail/@item.DecodeId" class="text-link HubDetails"> <i class="flaticon-edit"> </i> </a></td>
                                        <td><a href="#" class="text-danger deleteHubId" data-id="@item.Id"> <i class="flaticon-delete deleteHubId"> </i></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="viewMessage1" value="@(Model.ViewMessage ??"")" />
<input type="hidden" id="errorMessage1" value="@(Model.ErrorMessage ?? "")" />
@section scripts {
    <script src="~/assets/scripts/hub/manage.js"></script>
}

