@using Freshlo.Web.Models.PricelistVM;
@model PricelistVM
@{
    ViewData["Title"] = "_List";

}
<table id="tblPricelistId" class="table table-striped-even ab-table-head-bg-warning-light table-borderless table-middle m-data-table dataTable">
    <thead>
        <tr>
            <th style="width:200px;">Item Name</th>
            <th>Quantity</th>
            <th>Wasatage %</th>
            <th>Purchase Price</th>
            <th>Profit Margin (%)</th>
            <th>Actual Cost </th>
            <th>Profit Margin</th>
            <th>Market Price</th>
            <th>Selling Price</th>
            <th>Sale</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var list in Model.getItemPricelist)
        {
            <tr>
                <td style="width:250px;">
                    <a href="/ItemMaster/Detail/@list.Id" class="font-medium-1" id="pluName" data-id="@list.Id" name="pluNames">@list.pluName</a>
                    <input hidden value="@list.Id" name="Ids" />
                </td>
                <td>
                    <div class="display-inline-flex">
                        <h6 class="font-medium-3" id="OrderQty">@list.OrderQty <small class="font-small-3">@list.Measurement</small> </h6>
                    </div>
                </td>

                <td>
                    <input style="width:100px;" type="text" class="form-control m-input m-input--solid WasteagePerc-Cls font-medium-2 font-weight-bold WasteagePerc" id="WasteagePerc" name="WasteagePercs" value="@list.WasteagePerc" asp-for="@list.WasteagePerc" data-id="@list.ItemId">
                </td>

                <td>
                    <input style="width:100px;" type="text" name="PurchasePrices" class=" form-control m-input m-input--solid font-medium-2 font-weight-bold PurchasePrice" id="PurchasePrice" value="@list.PurchasePrice" asp-for="@list.PurchasePrice" data-id="@list.ItemId">
                </td>
                <td>
                    <input style="width:100px;" type="text" name="SellingProfitPers" class="form-control m-input m-input--solid font-medium-2 font-weight-bold SellingProfitPer" id="SellingProfitPer" value="@list.SellingProfitPer" asp-for="@list.SellingProfitPer" data-id="@list.ItemId">
                </td>
                <td>
                    <span class="width-50 font-medium-2 font-weight-bold" id="TotalPrice" name="TotalPrices" value="@list.TotalPrice">@list.TotalPrice</span>
                    <input style="width:100px;" type="text" name="TotalPrices" class="form-control m-input m-input--solid font-medium-2 font-weight-bold" id="TotalPricetxt" value="@list.TotalPrice" asp-for="@list.TotalPrice" data-id="@list.ItemId" hidden>

                </td>
                <td>
                    <input style="width:100px;" type="text" class="form-control m-input m-input--solid font-medium-2 font-weight-bold ProfitMargin" id="ProfitMargin" name="ProfitMargins" value="@list.ProfitMargin" asp-for="@list.ProfitMargin" data-id="@list.ItemId">
                </td>
                <td>
                    <input style="width:100px;" type="text" class="form-control m-input m-input--solid font-medium-2 font-weight-bold MarketPrice" name="MarketPrices" id="MarketPrice" value="@list.MarketPrice" asp-for="@list.MarketPrice" data-id="@list.ItemId">
                </td>
                <td>
                    <input style="width:100px;" type="text" class="form-control m-input m-input--solid font-medium-2 font-weight-bold SellingPrice" name="SellingPrices" id="SellingPrice" value="@list.SellingPrice" asp-for="@list.SellingPrice" data-id="@list.ItemId">
                </td>
                <td>
                    <label class="ab-switch">
                        <input type="checkbox" value="@list.seasonSale" class="seasonSale" name="seasonSales" id="seasonSales" checked>
                        <span class="slider round"></span>
                    </label>
                </td>
            </tr>
        }
    </tbody>
</table>


<script>
        $('#tblPricelistId').DataTable({
            "pageLength": 100,
            "ordering": false,
            "sorting": true
        });
</script>