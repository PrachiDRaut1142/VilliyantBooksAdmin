@using Freshlo.DomainEntities;
@using Freshlo.Web.Models.PricelistVM
@using System.Globalization
@using Freshlo.Web.Helpers
@model PricelistVM
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<!-- BEGIN: Subheader -->
<div class="m-subheader ">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="m-subheader__title m-subheader__title--separator">Price Management</h3>
            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                <li class="m-nav__item m-nav__item--home">
                    <a href="javascripts:;" class="m-nav__link m-nav__link--icon">
                        <i class="m-nav__link-icon la la-home"></i>
                    </a>
                </li>
                <li class="m-nav__separator">-</li>
                <li class="m-nav__item">
                    <a href="/Sale/Index/" class="m-nav__link">
                        <span class="m-nav__link-text">Home</span>
                    </a>
                </li>
                <li class="m-nav__separator">-</li>
                <li class="m-nav__item">
                    <a href="javascripts:;" class="m-nav__link">
                        <span class="m-nav__link-text">Price Manage</span>
                    </a>
                </li>
            </ul>
        </div>
        <div>
            <button type="button" class="btn btn-dark toptouchdiv" id="AddPricelist"> Save Changes</button>
        </div>
    </div>
</div>
<!-- END: Subheader -->

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__body pb-0">
            <div class="row">
                <div class="col-md-3">
                    <div class="row">
                        <div class="ml-2 mr-2">
                            <div class="form-group" style="margin-top: 5px;">
                                <i class="la la-filter"></i> Filter :
                            </div>
                        </div>
                        <div class="ml-2" style="width:75%">
                            <div class="form-group">
                                <select class="form-control m-input m-input--solid" id="MainCategoryId">
                                    <option value="0" selected disabled>MainCategory</option>
                                    @foreach (var getManCategList in Model.GetMainCategoryList)
                                    {
                                        <Option value="@getManCategList.MainCatId">@getManCategList.ManCatName</Option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <select class="form-control m-input m-input--solid" id="CategoryId">
                            <option value="0" selected disabled>Category</option>
                            @foreach (var getCategList in Model.getCattegorylist)
                            {
                                <option value="@getCategList.CategoryId">@getCategList.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <select asp-items="@Model.GetitemType" class="form-control m-input m-input--solid" id="ItemType">
                            <option value="0" selected disabled>Item Type</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <select class="form-control m-input m-input--solid" id="ApproavalType">
                            <option value="0" disabled>Availability</option>
                            <option value="Y">Yes</option>
                            <option value="N">No</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <button type="button" class="btn btn-primary" id="Filter-Id">Find</button>
                        <button type="button" class="btn btn-link" id="Clear-Id">Clear</button>
                    </div>
                </div>
                <div class="col-md-2 showdiv" style="display:none;">
                    <div class="form-group">
                        <button type="button" class="btn btn-dark pull-right"><i class="la la-save"></i> Save Changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="m-portlet">
        <div class="m-portlet__body">
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive" id="pricelistDivId">
                        <form id="PriclistFormId" method="post" asp-controller="Price" asp-action="List">
                            <div class="" id="pricelist" role="tabpanel">
                            </div>
                        </form>
                        <table class="table table-striped-even ab-table-head-bg-warning-light table-borderless table-middle m-data-table">
                                <thead>
                                    <tr>
                                        <th style="width:200px;">Item Name</th>
                                        <th>Quantity</th>
                                        <th>Wasatage %</th>
                                        <th>Purchase Price</th>
                                        <th>Profit Margin (%)</th>
                                        <th>Actual Cost </th>
                                        <th>Profit Margin</th>
                                        <th>Market Price</th>
                                        <th>Selling Price</th>
                                        <th>Sale</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var list in Model.getItemPricelist)
                                    {
                                        <tr>
                                            <td style="width:200px;">
                                                <a href="#" id="pluName">@list.pluName</a>
                                            </td>
                                            <td>
                                                <div class="display-inline-flex">
                                                    <h6 class="font-medium-1" id="OrderQty">@list.OrderQty</h6>
                                                    <span class="p-2" id="Measurement">@list.Measurement</span>
                                                </div>
                                            </td>
                                            <td>
                                                <input type="text" class="form-control m-input m-input--solid" id="WasteagePerc" value="@list.WasteagePerc">
                                            </td>
                                            <td>
                                                <input type="text" name="PurchasePrice" class=" form-control m-input m-input--solid" id="PurchasePrice" value="@list.PurchasePrice">
                                            </td>
                                            <td>
                                                <input type="text" name="SellingProfitPer" class="form-control m-input m-input--solid" id="SellingProfitPer" value="@list.SellingProfitPer">
                                            </td>
                                            <td>
                                                <span class="width-50" id="TotalPrice">@list.TotalPrice</span>
                                            </td>
                                            <td>
                                                <input type="text" class="form-control m-input m-input--solid" id="ProfitMargin" value="@list.ProfitMargin">
                                            </td>
                                            <td>
                                                <input type="text" class="form-control m-input m-input--solid" id="MarketPrice" value="@list.MarketPrice">
                                            </td>
                                            <td>
                                                <input type="text" class="form-control m-input m-input--solid" id="SellingPrice" value="@list.SellingPrice">
                                            </td>
                                            <td>
                                                <label class="ab-switch">
                                                    <input type="checkbox" value="@list.seasonSale" id="seasonSale">
                                                    <span class="slider round"></span>
                                                </label>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


@section scripts {
    <script src="~/assets/scripts/price/List.js"></script>

}
<script>
        $('#tblPricelistId').DataTable({
            "pageLength": 100,
            "ordering": false,
            "sorting": true
        });
</script>
