@using Freshlo.DomainEntities.Inventory;
@model List<InventoryAsset>


 <table class="table table-striped-even ab-table-head-bg-warning-light table-borderless table-middle m-data-table" id="zipcodelist1">
                                            <thead>
                                                <tr>
                                                    <th>ItemId</th>
                                                    <th>Item Name</th>
                                                    <th>Entry Type</th>
                                                    <th>Qty</th>   
                                                    <th>Created Date</th>   
                                                    <th>Created By</th>        
                                                    <th>Remarks</th>
                                                </tr>
                                            </thead>
                                            <tbody id="InventoryLogsAdd">
                                                @foreach (var item in Model)
   {
    <tr>
        <td><spam class="font-medium-1">@item.ItemId</spam></td>
        <td><spam class="font-medium-3 ">@item.AssetName</spam></td>
                @if(@item.EntryType == 1)
                {
                    <td><spam class="font-medium-3 ">Add to Inventory</spam></td>
                }
                else
                {
                     <td><spam class="font-medium-3 ">Remove from Inventory</spam></td>
                } 
        <td><spam class="font-medium-1" >@item.Quantity</spam></td>
        <td><spam class="font-medium-1" >@item.CreatedDate</spam></td>
        <td><spam class="font-medium-1" >@item.CreatedBy</spam></td>
        <td><span class="font-medium-1 font-weight-bold">@item.Remarks</span></td>
    </tr>
   }
                                            </tbody>
                                        </table>


 @section Scripts{
    <script src="~/assets/app/js/datatable.js"></script>
}

   