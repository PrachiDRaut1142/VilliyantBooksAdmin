@using Freshlo.Web.Models.CategoriesVM;
@model MainCatgoriesVM;
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var aliyunpath = Model.businessInfo.aliyunPath;
}

<style>
    .product-variant figure {
        width: 200px;
        height: 200px;
        position: relative;
    }

    .product-variant figure img {
        width: 100% !important;
        height: 100% !important;
        object-fit: cover;
    }

    .product-variant figure figcaption {
        color: #fff;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background-color: #343a40;
        text-align: center;
        cursor: pointer;
        display: none;
    }

    .product-variant figure:hover figcaption {
        display: block;
    }

    .product-variant figure figcaption i {
        line-height: 30px;
    }
</style>

<!-- BEGIN: Subheader -->
<div class="m-subheader ">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="m-subheader__title m-subheader__title--separator">Category Management</h3>
            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                <li class="m-nav__item">
                    <span class="text-link">
                        <span class="m-nav__link-text">Manage</span>
                    </span>
                </li>
            </ul>
        </div>
        <div>
            <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#mainCategory">
                <i class="la la-plus"></i>
                Add Main Category
            </button>
        </div>
    </div>
</div>
<!-- END: Subheader -->

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <span class="m-portlet__head-icon m--hide">
                        <i class="la la-gear"></i>
                    </span>
                    <h3 class="m-portlet__head-text">
                        Manage Main Category
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-striped-even ab-table-head-bg-warning-light table-borderless CatManage" id="table-draggable2">
                            <thead>
                                <tr>
                                    <th>Logo</th>
                                    <th>Main Category Name</th>
                                    <th>Category Count</th>
                                    <th>Sequence</th>
                                    <th>Visibility</th>
                                    <th>Created On / By</th>
                                    <th>Edit</th>
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <tbody class="connectedSortable" id="tableid">
                                @foreach (var item in Model.Maincatlist)
                                {

                                <tr>
                                    <td>
                                        <img alt="MainCategory Image" src="https://freshlo.oss-ap-south-1.aliyuncs.com/@aliyunpath/category-images/@(item.MainCategoryId).png" onerror="this.onerror = null;
                                                          this.src = 'https://freshlo.oss-ap-south-1.aliyuncs.com/@aliyunpath/no-image.png';" style="width:60px;border-radius:5px;" />
                                    </td>
                                    <td><a href="/Category/Detail/?Id=@item.MainCategoryId" class="text-dark">@item.Name</a><span class="d-block font-small-2">@item.Description</span></td>
                                    <td><span class="m-badge m-badge--rounded m-badge--danger m-badge--brand font-small-3">@item.CategoryCount</span></td>
                                    <td><span class="m-badge m-badge--rounded m-badge--wide m-badge--brand font-small-3">@item.Sequence</span></td>
                                    <td><span class="m-badge m-badge--rounded m-badge--wide m-badge--success font-small-3">@item.Visibility</span></td>
                                    <td>@item.AddedOn <span class="font-small-3 display-block">@item.AddedBy</span></td>
                                    <td><a href="/Category/Detail/?Id=@item.MainCategoryId" class="text-dark"> <i class="flaticon-edit"></i> </a></td>
                                    <td>
                                        <a href="#" class="text-danger deleteMainCatiD" data-id="@item.MainCategoryId"> <i class="flaticon-delete"> </i></a>

                                        <a href="#" class="text-dark viewcategory ml-2" id="viewmaincategory" data-id="@item.MainCategoryId"><i class="fa fa-eye"> </i></a>

                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MAIN CATEGORY MODAL -->
