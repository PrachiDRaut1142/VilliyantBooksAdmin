        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Main Category</h5>
                <button type="button" class="close CatCreateClose" data-dismiss="modal" id="CatCreateClose" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form class="m-form m-form--fit m-form--label-align-right" enctype="multipart/form-data" id="MainCategoryCreate" method="post" asp-action="AddedMainCategory" asp-controller="Category">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="product-variant">
                                                <label class="cabinet center-block">
                                                    <figure>
                                                        <img src="~/img/no-image.png" class="gambar img-responsive img-thumbnail" id="item-img-output" />
