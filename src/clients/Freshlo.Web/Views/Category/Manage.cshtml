                                                <label>Description</label>
                                                <textarea rows="4" class="form-control m-input m-input--solid SpaceValidation" placeholder="description" id="CatDescription" value="NA" name="Description"></textarea>
                                            </div>
                                            <div class="form-group">
                                                <label>Sequence</label>
                                                <input type="number" class="form-control m-input m-input--solid" min="0" maxlength="3" placeholder="eg. 02" id="CatSequence" name="Sequence" />
                                                <span class="text-danger font-small-3 " style="display:none;" id="SpnCatSequence"></span>
                                            </div>
                                            <div class="form-group">
                                                <label>Visibility</label>
                                                <select class="form-control m-input m-input--solid" id="Visibility" name="Visibility">
                                                    <option value="1">Yes</option>
                                                    <option value="0">No</option>
                                                </select>
                                            </div>

                                            @*<div class="form-group row">
            <label class="col-md-3 col-form-label">Upload Image (Thumbnail Primary Image) <span class="text-warning">*</span></label>
            <div class="col-md-3">
                <input type="file" class="form-control m-input m-input--solid" name="imageFiles" id="imageFiles" placeholder="">
            </div>
        </div>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <input type="text" id="Aliyunkey" name="Aliyunkey" value="@aliyunpath" hidden />
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-link CatCreateClose" data-dismiss="modal" id="CatCreateClose">Close</button>
                <button type="button" class="btn btn-danger" id="SubmitMancategory">Submit</button>
            </div>
        </div>
    </div>
</div>

<!-- MAIN CATEGORY TRANSLATION MODAL -->
<div class="modal fade" id="mainCategory_translation" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Main Category Language Translation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body pt-0">
                <div>
                    <div class="text-right mb-3 mt-3">
                        <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#add_language_md">Add Language</button>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped-even ab-table-head-bg-warning-light table-borderless" id="table-draggable2">
                            <thead>
                                <tr>
                                    <th width="40%">Category Name</th>
                                    <th width="50%">Description</th>
                                    <th width="10%">Action</th>
                                </tr>
                            </thead>
                            <tbody id="languageMainCateId"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- ADD LANGUAGE MODAL -->
<div class="modal fade" id="add_language_md" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Add Language</h5>
                <button type="button" class="close closemaincategorylanguage" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form class="m-form m-form--fit m-form--label-align-right" enctype="multipart/form-data" id="MainCategoryUpdate" method="post" action="/Category/GetLanguageMainCategory/">
                            <div class="row">
                                <div class="col-md-12" style="display:block">
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label">Select Language</label>
                                        <div class="col-md-8">
                                            <select class="form-control m-input--solid clear-cls" id="Addlanguagetext" name="LanguageName">
                                                @foreach (var item in Model.getaddedlanguagelist)
                                                {
                                                        @if (@item.Languagecode == "English")
                                                        {
                                                            <option value="@item.Languagecode" selected>@item.LanguageName</option>
                                                        }
                                                        else if (ViewBag.language != "No Set")
                                                        {
                                                             <option value="@item.Languagecode">@item.LanguageName</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@item.Languagecode">@item.LanguageName</option>
                                                        }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Main Category Name</label>
                                        <input type="text" class="form-control m-input m-input--solid SpaceValidation" id="maincategorylanguagename" name="MainCatNameLanguage" placeholder="Main Category Name" value="" />                                        
                                        <span class="text-danger font-small-3 " style="display:none;" id="Spnmaincategorylanguagename"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Description</label>
                                        <textarea rows="4" class="form-control m-input m-input--solid SpaceValidation" placeholder="description" value="" id="maincategoryDescription" name="Descriptionlanguage"></textarea>                                        
                                    </div>
                                    <input type="text" id="MainCategoryId143" name="MainCategoryId" value="@ViewBag.maincatId" style="display:none" hidden />
                                </div>                                
                            </div>
                            <input type="text" id="Aliyunkey" name="Aliyunkey" value="@aliyunpath" hidden />
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-link closemaincategorylanguage" data-dismiss="modal">Close</button>

                
                    <button type="button" class="btn btn-dark" id="maincategorylanguage">Submit</button>
                
               

            </div>
        </div>
    </div>
</div>


@section scripts {
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#item-img-output').attr('src', e.target.result).width(150).height(200);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
        $(document).ready(function () {
            $('.modal').on('hidden.bs.modal', function () {
                $(this).find('form')[0].reset();
                $(this).find('img')[0].reset();
            });
        });
    </script>
    <script src="~/assets/scripts/category/index.js"></script>
    <script src="~/assets/img_crop/js/img_crop.js"></script>
    <script src="~/assets/img_crop/js/img_crop_main.js"></script>
    <script src="~/assets/scripts/settings/language.js"></script>
}