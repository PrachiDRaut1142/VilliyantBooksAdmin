@using Freshlo.Web.Models.CustomerVM
@using System.Globalization
@using Freshlo.Web.Helpers
@model DetailViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<table class="table table-striped-even ab-table-head-bg-warning-light table-borderless" id="Saleslist">
    <thead>
        <tr>
            <th>Sales Id</th>
            <th>Total Items</th>
            <th>Total Price</th>
            <th>Order Status</th>
            <th>Payment</th>
            <th>Order On</th>
            <th>Delivery On</th>
            <th>Bill Print</th>
        </tr>
    </thead>
    <tbody id="saleslist">
        @foreach (var list in Model.SalesList)
        {
            <tr>
                <td class="">
                    <a href="/Sale/Detail/@list.SalesOrderId" class="text-link">@list.SalesOrderId</a>
                </td>
                <td>
                    <span class="display-block text-dark">@list.PLU_Count</span>
                </td>
                <td>  <span class="CurrencyData">@list.Symbol</span> <span class="font-medium-1 text-bold-700">@list.TotalAmount </span></td>
                <td><span class="m-badge m-badge--rounded m-badge--wide font-small-3 m-badge--@(SalesHelpers.OrderStatusTag.ContainsKey(list.OrderdStatus) ? SalesHelpers.OrderStatusTag[list.OrderdStatus]:"info")">@list.OrderdStatus</span></td>
                <td><span class="m-badge m-badge--rounded m-badge--wide font-small-3 m-badge--@(SalesHelpers.PaymentStatusTag.ContainsKey(list.PaymentStatus) ? SalesHelpers.PaymentStatusTag[list.PaymentStatus]:"Not Known")">@list.PaymentStatus</span></td>

                <td class="text-dark">
                    @list.CreatedOn
                </td>
                <td class="text-dark">
                    @list.DeliveryDate1.ToString("dd-MMM-yyyy", CultureInfo.InvariantCulture)
                </td>
                <td>
                    <a href="@Url.Action("Index","Print",new { id1 = list.SalesOrderId })">
                        <i class="flaticon-technology text-muted"></i>
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>
